generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

generator clientUsers {
  provider = "prisma-client-js"
  output   = "../user-service/prisma/client"
}

generator clientTasks {
  provider = "prisma-client-js"
  output   = "../task-service/prisma/client"
}

model Users {
  id        Int   @id @default(autoincrement())
  name      String
  email     String?  @unique
  password  String
  role      Role     @default(USER)

  tasks     Tasks[]
}

model Tasks {
  id        Int   @id @default(autoincrement())
  title     String
  status    Boolean  @default(false)

  userId    Int
  user      Users    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  ADMIN
}
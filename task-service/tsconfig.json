{
  "compilerOptions": {
    "target": "es2016",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["."],
  "exclude": ["dist", "node_modules", "utils"]
}
